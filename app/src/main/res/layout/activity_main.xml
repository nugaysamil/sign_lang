<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="#282828"

    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/sign_photo"
        android:layout_centerInParent="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignDet'e Hoş Geldiniz!"
        android:textAllCaps="false"
        android:fontFamily="@font/robotobold"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İşaret dili ve sesi yazıya dönüştürmenin en kolay yolu. "
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/robotobold"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/camera_button"
        android:text="Real-time"
        android:fontFamily="@font/robotobold"

        android:textAllCaps="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/letsButton"
        android:layout_height="50dp"
        android:background="@drawable/roundedstyle"
        android:text="Hemen Başla!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:padding="10dp"
        android:fontFamily="@font/robotobold"

    />

</LinearLayout>